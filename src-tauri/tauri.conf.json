{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Hoyland Generator 3 by Altered States",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "windows": [
      {
        "title": "Hoyland Generator 3 by Altered States",
        "width": 1024,
        "height": 1024,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": ["nsis"],
      "resources": ["/Users/forsite/Desktop/asl-hoyland/src-tauri/resources/WebView2Loader.dll"],
      "identifier": "com.hoyland.asl",
      "windows": {
        "wix": {
          "language": "en-US"
        },
        "webviewInstallMode": { "type": "embedBootstrapper", "silent": true }
      },
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
